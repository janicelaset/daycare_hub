#search-page {
  background: #F8F8F8;
  color: #555555;
}
.home-info {
  margin-top: 3%;
}

.search-header {
  box-shadow: 2px 2px 6px #B1B1B1;
}

.search-input {
  opacity: 0.90;
}

h2.search-text {
  margin-top: 110px;
  padding-bottom: 40px;
  font-size: 4.5em;
  margin-bottom: 1%;
  font-weight: 500;
  color: #fff;
}

.home-info-section {
  text-align: center;
  border-style: solid;
  border-color: #ddd;
  border-width: 1px;
  box-shadow: 2px 2px 6px #B1B1B1;
  margin-bottom: 2em;
  min-height: 425px;
}

.home-infographic {
  text-align: center;
  background: #FFF;
  box-shadow: 2px 2px 6px #B1B1B1;
}

#map-container {
   height: 400px;
   border-radius: 16px 16px;
   border-color: #fff;
   border-style: solid;
   box-shadow: 2px 2px 10px #B1B1B1;
   margin-top: 25px;
   border-width: 7px;
 }
 #map-canvas {
   height: 384px;
   width: 100%;
 }

 /* Bootstrap Css Map Fix*/
#map-container #map-canvas img {
  max-width: none;
}
/* Bootstrap Css Map Fix*/
#map-container #map-canvas label {
  width: auto; display:inline;
}

.navbar {
  margin-bottom: 0;
}

#search-background {
  background-image: url("<%= asset_path('header_bkg.jpg') %>");
  opacity: 0.9;
  background-size: cover;
  width: 100%;
}

#daycare-link{
	background-image: url("<%= asset_path('daycare_link.jpg') %>");
	background-size: cover;
}

section.section.search-bkg {
  padding: 160px 0 180px 0;
}

.jumbotron {
  background-image:linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url("<%= asset_path('header_bkg.jpg') %>");
  opacity: 0.9;
  background-size: cover;
  margin-bottom: 0;
  overflow:hidden;
  width: 100%;
  height: 600px;
  text-align: center;
  color: white;
}

.input-lg,
.btn-lg {
  height: 3.2em;
}

.row.search-results {
  margin-top: 2em;
}

.search-results-image {
  margin-top: 1em;
  margin-left: 1em;
  margin-bottom: 1em;
}

.search-results-thumb {
  min-height: 151px;
}

@media (max-width: 767px) {
  h2.search-text {
    margin-top: 110px;
    padding-bottom: 20px;
    font-size: 3.5em;
    margin-bottom: 1%;
    font-weight: 500;
    color: #fff;
      }
}

@media (max-width: 767px) {
    .custom-input-group.input-group .input-group-btn {
      width:100%;
      display:block;
      margin-bottom:5px;
      clear: both;
    }
    .custom-input-group.input-group .input-group-btn .btn {
        width: 100%;
    }
    .custom-input-group {
        display: block;
    }
    .custom-input-group.input-group .input-group-addon {
        clear: both;
        display: block;
        width: 100%;
        border: 1px solid #ccc;
        // border-radius: 4px;
    }
    .custom-input-group.input-group .input-group-addon + .form-control {
        // border-radius: 4px;
        margin-bottom: 5px;
    }
}

#search-filter {
  position: relative;
  z-index: 999;
  margin-top: 25px;
}

#search-dropdown {
  z-index: 9999;
  position: relative;
}

section.module.parallax {
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  // position: relative;
  z-index: -1;
}

section.module.parallax-1 {
  height: 600px;
  background-image: url("<%= asset_path('header_bkg.jpg') %>");
  // z-index: -1;
  // position: relative;
}

section.module.parallax-2 {
  height: 300px;
  background-image: url("<%= asset_path('daycare_link.jpg') %>");
}
