#search-page {
  background: #F8F8F8;
  color: #555555;
}
.home-info {
  margin-top: 3%;
}

.search-header {
  box-shadow: 2px 2px 6px #B1B1B1;
}

.search-input {
  opacity: 0.90;
}

.search-text {
  padding-top: 110px;
  padding-bottom: 40px;
  font-size: 4.5em;
  margin-bottom: 1%;
  font-weight: 500;
  color: #fff;
}

.home-info-section {
  text-align: center;
  border-style: solid;
  border-color: #ddd;
  border-width: 1px;
  box-shadow: 2px 2px 6px #B1B1B1;
  margin-bottom: 2em;
  min-height: 425px;
}

.home-infographic {
  text-align: center;
  background: #FFF;
  box-shadow: 2px 2px 6px #B1B1B1;
}

#map-container {
   height: 400px;
   border-radius: 16px 16px;
   border-color: #fff;
   border-style: solid;
   box-shadow: 2px 2px 10px #B1B1B1;
   margin-top: 25px;
   border-width: 7px;
 }
 #map-canvas {
   height: 384px;
   width: 100%;
 }

 /* Bootstrap Css Map Fix*/
#map-container #map-canvas img {
  max-width: none;
}
/* Bootstrap Css Map Fix*/
#map-container #map-canvas label {
  width: auto; display:inline;
}

.navbar {
  margin-bottom: 0;
}

#search-background {
  background-image: url("<%= asset_path('header_bkg.jpg') %>");
  opacity: 0.9;
  background-size: cover;
  width: 100%;
}

#daycare-link{
	background-image: url("<%= asset_path('daycare_link.jpg') %>");
	background-size: cover;
}

section.section.search-bkg {
  padding: 160px 0 180px 0;
}

.jumbotron {
  background-image:linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url("<%= asset_path('header_bkg.jpg') %>");
  opacity: 0.9;
  background-size: cover;
  margin-bottom: 0;
  overflow:hidden;
  width: 100%;
  height: 600px;
  text-align: center;
  color: white;
}

.input-lg,
.btn-lg {
  height: 3.2em;
}

.row.search-results {
  margin-top: 2em;
}

.search-results-image {
  margin-top: 1em;
  margin-left: 1em;
  margin-bottom: 1em;
}

.search-results-thumb {
  min-height: 151px;
}

@media (max-width: 767px) {
  .input-group-addon, .input-group-btn, .input-group .form-control {
      display: block;
      margin-bottom: 5px;
      clear: both;
      }
  .input-group {
      display: block;
      }
}

#search-filter {
  position: relative;
  z-index: 999;
  margin-top: 25px;
}

// .search-dropdown.dropdown-menu{
//   z-index: 99999 !important;
//   position: absolute;
// }

#search-dropdown {
  z-index: 9999;
  position: relative;
}

section.module.parallax {
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}

section.module.parallax h1 {
  color: rgba(255, 255, 255, 0.8);
  font-size: 48px;
  line-height: 600px;
  font-weight: 700;
  text-align: center;
  text-transform: uppercase;
  text-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

section.module.parallax-1 {
    height: 600px;
  background-image: url("<%= asset_path('header_bkg.jpg') %>");
}

section.module.parallax-2 {
  height: 300px;
  background-image: url("<%= asset_path('daycare_link.jpg') %>");
}
