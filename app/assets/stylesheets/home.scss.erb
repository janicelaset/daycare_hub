#search-filter {
  margin-top: 25px;
}

#map-container {
   height: 400px;
   border-radius: 16px 16px;
   border-color: #fff;
   border-style: solid;
   box-shadow: 2px 2px 10px #B1B1B1;
   margin-top: 25px;
   border-width: 7px;
 }
 #map-canvas {
   height: 384px;
   width: 100%;
 }

 /* Bootstrap Css Map Fix*/
#map-container #map-canvas img {
  max-width: none;
}
/* Bootstrap Css Map Fix*/
#map-container #map-canvas label {
  width: auto; display:inline;
}

.navbar {
  margin-bottom: 0;
}

.navbar-default {
  // background-color: white;
}

.jumbotron {
  background-image:linear-gradient( rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7) ), url("<%= asset_path('header_bkg.jpg') %>");
  opacity: 0.9;
  background-size: cover;
  margin-bottom: 0;
  overflow:hidden;
  width: 100%;
  height: 600px;
  text-align: center;
  color: white;
}

.input-lg,
.btn-lg {
  height: 3.2em;
}

.row.search-results {
  margin-top: 2em;
}

.search-results-image {
  margin-top: 1em;
  margin-left: 1em;
}

@media (max-width: 767px) {
  .input-group-addon, .input-group-btn, .input-group .form-control {
      display: block;
      margin-bottom: 5px;
      clear: both;
      }
  .input-group {
      display: block;
      }
}
