<%= render "layouts/errors", :object => @certification %>

<%= form_for [@daycare, @certification], :html => { :class => "form-horizontal", :multipart => true }, remote: true do |f| %>
  <div class="form-group">
    <div class="col-lg-3 daycare-edit-field">
      <%= f.collection_select(:id, Certification.all, :id, :name, { :include_blank => "Add New Certification"}, { class: 'form-control', onchange: "disableCertInput(#{@certification.id})" }) %>
    </div>

    <div class="col-lg-12">
    <%= f.label :name, class: 'control-label col-lg-1' %>
    <div class="col-lg-11 daycare-edit-field">
      <%= f.text_field :name, id: "certification-edit-name#{@certification.id}", class: 'form-control', required: true, placeholder: "Enter the name of the certification" %>
    </div>
  </div>

    <!-- <%= f.label :link, class: 'control-label col-lg-1' %>
    <div class="col-lg-11 daycare-edit-field">
      <%= f.text_field :link, id: "certification-edit-link#{@certification.id}", class: 'form-control certification-edit-link', placeholder: "Enter the URL for the organization or a link to your certification if it is available online" %>
    </div> -->

    <div class="col-lg-12">
      <%= f.label :description, class: 'control-label col-lg-1' %>
      <div class="col-lg-11 daycare-edit-field">
        <%= f.text_area :description, class: 'form-control', rows: "5", id: "certification-edit-desc#{@certification.id}", placeholder: 'Add a short description of the organization and what the certification means' %>
      </div>
    </div>

    <!-- <div class="col-md-12 daycare-edit-field">
      <span class="btn btn-info btn-file">
        Select Image<%= f.file_field :image, class: "btn-block", id: "btn-select-image", onchange: '$("#certification-upload-file-info").html($(this).val());' %>
      </span>
      <span class='label label-default label-image-upload' id="certification-upload-file-info"></span>
    </div> -->

    <div class="col-md-12">
      <%= f.submit "Submit", class:'btn btn-primary btn-submit' %>
      <% if @certification.name != nil %>
      <button class="btn btn-primary btn-cancel" onclick="hideEditForm('<%= @certification.id %>')" id="cancel-certification-edit">Cancel</button>
      <% end %>
    </div>
  </div>
<% end %>
