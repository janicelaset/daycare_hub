<% if @daycare.certifications.any? %>
  <div class="row daycare-profile-section">
    <div class="daycare-profile-section-content">
    <div class="daycare-profile-header">
      <h1>Certifications</h1>
    </div>
    <div class="row">
      <% @certifications.each do |certification| %>
        <div class="col-md-12 col-md-8 daycare-profile-section-list">
          <div class="media">
            <div class="media-left media-top media-cert">
              <%= image_tag certification.image.url(:small) %>
            </div>
            <div class="media-body">
              <h3 class="media-content-header"><%= certification.name %></h3>
              <p>
                <%= simple_format h certification.description %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </div>
<% end %>
