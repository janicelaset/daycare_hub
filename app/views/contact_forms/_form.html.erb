<%= render "layouts/errors", :object => @contact_form %>

<%= simple_form_for [@daycare, @contact_form], :html => {:class => 'form-horizontal' }, remote: true do |f| %>

  <%= f.input :name, :required => true, id: 'contact_form_name' %>
  <%= f.input :email, :required => true, id: 'contact_form_email' %>
  <%= f.input :message, :as => :text, :required => true, id: 'contact_form_message' %>
  <div class= "hidden">
    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    <%= f.input :recipient, :input_html => { :value => @daycare.contact.email } %>
  </div>
  <div>
    </br>
    <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
  </div>
<% end %>



