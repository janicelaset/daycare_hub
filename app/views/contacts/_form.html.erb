<%= render "layouts/errors", :object => @contact %>

<%= form_for [@daycare, @contact], remote: !@wizard, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-1' %>
    <div class="col-sm-5 daycare-edit-field">
      <%= f.text_field :email, class: 'form-control', required: true %>
    </div>

    <%= f.label :phone, class: 'control-label col-sm-1' %>
    <div class="col-sm-5 daycare-edit-field">
      <%= f.text_field :phone, class: 'form-control', required: true %>
    </div>

    <div class="col-sm-12">
      <% if @wizard %>
        <div class="buttons-wizard">
          <%= f.submit "Next", class:'btn btn-primary btn-submit' %>
          <%= link_to 'Skip This Step', wizard_general_user_daycare_path(current_user, current_user.daycare), class: 'btn btn-primary btn-edit' %>
          <%= link_to 'Back', wizard_address_user_daycare_path(current_user, current_user.daycare), class: 'btn btn-primary btn-edit' %>
        </div>
      <% else %>
        <%= f.submit "Submit", class:'btn btn-primary btn-submit' %>
      <% end %>
    </div>
  </div>
<% end %>
