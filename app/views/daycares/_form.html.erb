<%= render "layouts/errors", :object => @daycare %>

<%= form_for [current_user, @daycare], :html => {:class => "form-horizontal"} do |f| %>
<div class="form-group">

  <%= f.label :name, class: 'control-label col-sm-2' %>
  <div class="col-sm-10 daycare-edit-field">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= f.label 'Type', class: 'control-label col-sm-2' %>
  <div class="col-sm-10 daycare-edit-field">
    <%= f.text_field :structure, class: 'form-control' %>
  </div>
  <div class="pull-right col-sm-3">
    <%= f.submit class:'btn' %>
  </div>
</div>
<% end %>
