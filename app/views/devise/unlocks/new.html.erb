<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-devise" }) do |f| %>
  <h2>Resend unlock instructions</h2>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "btn btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
