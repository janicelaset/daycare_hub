<%= render "layouts/errors", :object => @general %>

<%= form_for [@daycare, @general], remote: true, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <div class="col-md-12">
      <%= f.label "Type of Daycare", class: 'col-md-2' %>
      <div class="col-md-3">
        <%= f.radio_button :type_of_daycare, "family", :checked => (params[:type_of_daycare] == nil ? true : params[:type_of_daycare]) %> Family Daycare
      </div>
      <div class="col-md-3 daycare-edit-field">
        <%= f.radio_button :type_of_daycare, "center" %> Daycare Center
      </div>
    </div>
    <br><br><br>
    <div class="col-md-12">
      <%= f.label "License", class: 'col-md-2' %>
      <div class="col-md-4 daycare-edit-field">
        <%= f.select :license,
        ["Registered Family Child Care",
         "Certified Family Child Care",
         "Unlicensed Family Child Care",
         "Certified Child Care Center"],
        { :style =>  "min-width: 12em;"}, class: 'form-control' %>
      </div>
    </div>
    <br><br><br>

    <div class="col-md-12">
      <%= f.label :year_opened, class: 'col-md-2' %>
      <div class="col-sm-3 daycare-edit-field">
        <%= f.text_field :year_opened, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="pull-right col-md-3">
        <%= f.submit "Submit", class:'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
<% end %>
