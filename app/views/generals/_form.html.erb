<%= render "layouts/errors", :object => @general %>

<%= form_for [@daycare, @general], remote: true, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :year_opened, class: 'control-label col-sm-1' %>
    <div class="col-sm-11 daycare-edit-field">
      <%= f.text_field :year_opened, class: 'form-control' %>
    </div>

    <div class="pull-right col-sm-3">
      <%= f.submit class:'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
