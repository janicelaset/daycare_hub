<%= render "layouts/errors", :object => @general %>

<%= form_for [@daycare, @general], remote: !@wizard, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <div class="col-md-12">
      <%= f.label "Type of Daycare", class: 'col-md-2' %>
      <div class="col-md-3">
        <%= f.radio_button :type_of_daycare, "family", :checked => (params[:type_of_daycare] == nil ? true : params[:type_of_daycare]) %> Family Daycare
      </div>
      <div class="col-md-3 daycare-edit-field">
        <%= f.radio_button :type_of_daycare, "center" %> Daycare Center
      </div>
    </div>
    <br><br><br>
    <div class="col-md-12">
      <%= f.label "License", class: 'col-md-2' %>
      <div class="col-md-4 daycare-edit-field">
        <%= f.select :license,
        ["Registered Family Child Care",
         "Certified Family Child Care",
         "Unlicensed Family Child Care",
         "Certified Child Care Center"],
        { :style =>  "min-width: 12em;"}, class: 'form-control' %>
      </div>
    </div>
    <br><br><br>

    <div class="col-md-12">
      <%= f.label :year_opened, class: 'col-md-2' %>
      <div class="col-sm-3 daycare-edit-field">
        <%= f.text_field :year_opened, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-12">
      <% if @wizard %>
        <div class="buttons-wizard">
          <%= f.submit "Next", class:'btn btn-primary btn-submit' %>
          <%= link_to 'Skip This Step', wizard_summary_user_daycare_path(current_user, current_user.daycare), class: 'btn btn-primary btn-edit' %>
          <%= link_to 'Back', wizard_contact_user_daycare_path(current_user, current_user.daycare), class: 'btn btn-primary btn-edit' %>
        </div>
      <% else %>
          <%= f.submit "Submit", class:'btn btn-primary btn-submit' %>
      <% end %>
    </div>
  </div>
<% end %>
