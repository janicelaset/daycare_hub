<%= form_for [@daycare, @image], :html => {:class => "form-horizontal dropzone", :multipart => true, id: "image-form" }, remote: true do |f| %>

      <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>

          <%= f.file_field :picture %><br>
          <%= f.submit "Upload" %>


<% end %>
