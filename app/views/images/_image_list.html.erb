<% if @daycare.images.any? %>
  <ul id="imageList" class="list-unstyled" data-update-url="<%= move_daycare_images_path(@daycare) %>">
    <% @images.each do |image| %>
      <li class="panel panel-info" id="image-<%= image.id %>">
        <div class="panel-heading">
          <span id="panel-name-image-<%= image.id %>">
            <%= image.picture_file_name %>
          </span>
          <%= link_to edit_daycare_image_path(@daycare, image), id: "image-edit-#{image.id}", remote:true do %>
            <span><i class="glyphicon glyphicon-pencil pull-right" data-toggle="tooltip" data-placement="top" title="Edit"></i></span>
          <% end %>
          <%= link_to daycare_image_path(@daycare, image), method: 'delete', data: { confirm: "Are you sure you want do delete #{image.picture_file_name}?" }, id: "image-delete-#{image.id}", remote:true do %>
            <span><i class="glyphicon glyphicon-trash pull-right" data-toggle="tooltip" data-placement="top" title="Delete"></i></span>
          <% end %>
          <a><i class="glyphicon glyphicon-move pull-right" data-toggle="tooltip" data-placement="top" title="Drag panel title to rearrange sections"></i></a>
        </div>
        <div class="panel-body">
          <div class="media">
            <div class="media-left media-top">
              <span id="daycare-image-<%= image.id %>">
                <%= image_tag image.picture.url(:thumb) %>
              </span>
            </div>
            <div class="media-body">
              <h4>Description</h4>
              <span id="daycare-image-description-<%= image.id %>">
                <%= image.description %>
              </span>
            </div>
          </div>
        </div>
      </li>
      <div id="edit-image-<%= image.id %>" class="daycare-edit-form-slide">
      </div>
    <% end %>
  </ul>
  <hr>
  <div id="image-edit-modal" class="modal fade"></div>
<% end %>
