
<%= form_for [@daycare, @program], remote: true, :html => { :class => "form-horizontal", :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-sm-1' %>
    <div class="col-sm-5 daycare-edit-field">
      <%= f.text_field :name, id: "program-edit-name#{@program.id}", class: 'form-control program-edit-name', required: true, placeholder: "eg. Infant, Toddler, Preschool, etc" %>
    </div>

    <%= f.label :description, class: 'control-label col-sm-1' %>
    <div class="col-sm-5 daycare-edit-field">
      <%= f.text_area :description, class: 'form-control', required: true %>
    </div>

    <div class="pull-right col-sm-3">
      <%= f.submit class:'btn' %>
    </div>

  <% if @program.name != nil %>
      <div class="pull-right col-sm-3">
        <button class="btn pull-right" onclick="hideTeacherForm('<%= @program.id %>')" id="cancel-program-edit">Cancel</button>
      </div>
  <% end %>
  </div>
<% end %>
