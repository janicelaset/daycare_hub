
<%= form_for [@daycare, @program], :html => { :class => "form-horizontal", :multipart => true }, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-1' %>
    <div class="col-md-4 daycare-edit-field">
      <%= f.text_field :name, id: "program-edit-name#{@program.id}", class: 'form-control program-edit-name', required: true, placeholder: "eg. Infant, Toddler, Preschool, etc" %>
    </div>

    <%= f.label "Age Range", class: 'control-label col-md-2' %>
    <div class="col-md-1 daycare-edit-field">
      <%= f.text_field :age_from, class: 'form-control program-age-field' %>
    </div>

    <div class="col-md-1 daycare-edit-field">
      <%= f.select :age_from_units, ["years", "months", "weeks"], { :style =>  "min-width: 5em;"}, class: 'form-control program-age-units'%>
    </div>

    <div class="col-md-1">
      <center><%= f.label "to", "to", class: 'control-label' %></center>
    </div>

    <div class="col-md-1 daycare-edit-field">
      <%= f.text_field :age_to, class: 'form-control program-age-field' %>
    </div>

    <div class="col-md-1 daycare-edit-field">
      <%= f.select :age_to_units, ["years", "months", "weeks"], { :style =>  "min-width: 5em;"}, class: 'form-control program-age-units'%>
    </div>

    <%= f.label :description, class: 'control-label col-md-1' %>
    <div class="col-md-11 daycare-edit-field">
      <%= f.text_area :description, class: 'form-control', required: true, rows: "5" %>
    </div>

    <%= f.label :available, "Are there Openings?", class: 'control-label col-md-3' %>
    <div class="col-md-1 daycare-edit-field">
      <%= f.label :available, "Yes", class: 'control-label' %>
      <%= f.radio_button :available, true , class: 'form-control', :checked => true, :value => true %>
    </div>
    <div class="col-md-1 daycare-edit-field">
      <%= f.label :available, "No", class: 'control-label' %>
      <%= f.radio_button :available, false, class: 'form-control', :value => false %>
    </div>
    <br>

    <div class="col-md-12 daycare-edit-field">
      <div class="col-md-6">
        <span class="btn btn-default btn-file">
          Select Image<%= f.file_field :picture, class: "btn-block", id: "btn-select-image", onchange: "$('#program-upload-file-info').html($(this).val());" %>
        </span>
        <span class='label label-default label-image-upload' id="program-upload-file-info"></span>
      </div>
    </div>

    <div class="pull-right col-md-3">
      <%= f.submit class:'btn btn-primary btn-block' %>
    </div>

  <% if @program.name != nil %>
      <div class="pull-right col-md-3">
        <button type="button" class="btn btn-primary btn-block pull-right" onclick="hideEditForm('<%= @program.id %>', 'program')">Cancel</button>
      </div>
  <% end %>
  </div>
<% end %>
