<% if @daycare.programs.any? %>
  <section id="section-programs" class="section appear clearfix pad-bot30 bg-white">
    <div class="container">
      <div class="row mar-bot20">
        <div class="row mar-bot20">
          <div class="col-md-offset-3 col-md-6">
            <div class="section-header">
              <h2 class="section-heading animated" data-animation="bounceInUp">Programs</h2>
              <p></p>
            </div>
          </div>
        </div>
        <% if @programs.length == 1 %>
          <div class="row">
            <% @programs.each do |program| %>
              <% if program.picture_file_name != nil %>
                <div class="col-md-4">
                  <img src="<%= program.picture.url %>" class="img-responsive mar-bot20" alt="" />
                  <h4 class="text-bold"><%= program.name %></h4>
                  <% if program.age_from != nil && program.age_to != nil %>
                  <p>
                    Ages:
                    <%= program.age_from %>
                    <% if program.age_from_units != program.age_to_units %>
                    <%= program.age_from_units %>
                    <% end %>
                    to
                    <%= program.age_to %>
                    <%= program.age_to_units %>
                  </p>
                  <% end %>
                  <p>
                    Openings:
                    <% if program.available == true %>
                    Yes
                    <% else %>
                    None
                    <% end %>
                  </p>
                </div>
                <div class="col-md-8">
                  <p>
                    <%= simple_format h program.description %>
                  </p>
                </div>
              <% else %>
                <div class="col-md-12">
                  <h4 class="text-bold"><%= program.name %></h4>
                  <% if program.age_from != nil && program.age_to != nil %>
                  <p>
                    Ages:
                    <%= program.age_from %>
                    <% if program.age_from_units != program.age_to_units %>
                    <%= program.age_from_units %>
                    <% end %>
                    to
                    <%= program.age_to %>
                    <%= program.age_to_units %>
                  </p>
                  <% end %>
                  <p>
                    Openings:
                    <% if program.available == true %>
                    Yes
                    <% else %>
                    None
                    <% end %>
                  </p>
                  <p>
                    <%= simple_format h program.description %>
                  </p>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
        <% @programs.each_with_index do |program, index| %>
          <% if index%3 === 0 %>
            <div class="row">
          <% end %>
          <div class="col-md-4 mar-bot20" >
            <div class="align-center">
              <% if program.picture_file_name != nil %>
                <img src="<%= program.picture.url %>" class="img-responsive mar-bot20" alt="" />
              <% end %>
              <h4 class="text-bold"><%= program.name %></h4>
              <% if program.age_from != nil && program.age_to != nil %>
                <p>
                  Ages:
                  <%= program.age_from %>
                  <% if program.age_from_units != program.age_to_units %>
                    <%= program.age_from_units %>
                  <% end %>
                  to
                  <%= program.age_to %>
                  <%= program.age_to_units %>
                </p>
                <% end %>
                <p>
                  Openings:
                  <% if program.available == true %>
                    Yes
                  <% else %>
                    None
                  <% end %>
                </p>
              <p>
                <%= simple_format h program.description %>
              </p>
            </div>
          </div>
          <% if index%3 == 2 %>
            </div>
          <% end %>
        <% end %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
