<% if @daycare.programs.any? %>
  <div class="row daycare-profile-section">
    <div class="daycare-profile-section-content">
      <div class="daycare-profile-header">
        Programs
      </div>
      <div class="row">
        <% @programs.each_with_index do |program, index| %>
          <% if @programs.count == 1 %>
            <div class="col-md-12 col-md-8">
              <div class="media">
                <div class="media-left">
                  <%= image_tag program.picture.url(:medium) %>
                </div>
                <div class="media-body">
                  <h3 class="media-content-header"><%= program.name %></h3>
                  <p>
                    <%= simple_format h program.description %>
                  </p>
                  <h4>Ages</h4>
                  <p>
                    <%= program.age_from %> to <%= program.age_to %>
                  </p>
                  <% if program.available == true %>
                    We have openings
                  <% else %>
                    No openings
                  <% end %>
                </div>
              </div>
            </div>
          <% elsif @programs.count == 2 %>
            <div class="col-md-6">
              <div class="thumbnail daycare-profile-thumbnail">
                <div class="daycare-profile-thumbnail-img">
                  <%= image_tag program.picture.url(:medium) %>
                </div>
                <div class="caption">
                  <h3><%= program.name %></h3>
                  <p><%= program.description %></p>
                  <h4>Ages</h4>
                  <p>
                    <%= program.age_from %> to <%= program.age_to %>
                  </p>
                  <% if program.available == true %>
                    We have openings
                  <% else %>
                    No openings
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <% if (index+1)%3 == 0 %>
              <div class="row">
            <% end %>
            <div class="col-md-4">
              <div class="thumbnail daycare-profile-thumbnail">
                <div class="daycare-profile-thumbnail-img">
                  <%= image_tag program.picture.url(:medium) %>
                </div>
                <div class="caption">
                  <h3><%= program.name %></h3>
                  <p><%= program.description %></p>
                  <h4>Ages</h4>
                  <p>
                    <%= program.age_from %> to <%= program.age_to %>
                  </p>
                  <% if program.available == true %>
                    We have openings
                  <% else %>
                    No openings
                  <% end %>
                </div>
              </div>
            </div>
            <% if (index+1)%3 == 0 %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
