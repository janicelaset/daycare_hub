<% if @daycare.teachers.any? %>
  <div class="row mar-bot40">
    <div class="col-md-offset-3 col-md-6">
      <div class="section-header">
        <h2 class="section-heading animated" data-animation="bounceInUp">Teachers</h2>
        <p></p>
      </div>
    </div>
  </div>

  <% @teachers.each do |teacher| %>
    <div class="col-md-4">
      <div class="team-member img-teacher">
        <div class="img-teacher">
          <div class="circle-avatar" style="background-image:url(<%= teacher.picture.url %>)">
          </div>
        </div>
        <div class="team-detail">
          <h4><%= teacher.name %></h4>
          <span></span>
          <p>
            <%= simple_format h teacher.about %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
