<% if @daycare.teachers.any? %>
  <ul id="teacherList" class="list-unstyled" data-update-url="<%= move_daycare_teachers_path(@daycare) %>">
    <% @teachers.each do |teacher| %>
      <li class="panel panel-info" id="teacher-<%= teacher.id %>">
        <div class="panel-heading">
          <span id="panel-name-teacher-<%= teacher.id %>">
            <%= teacher.name %>
          </span>
          <%= link_to edit_daycare_teacher_path(@daycare, teacher), id: "teacher-edit-#{teacher.id}", remote:true do %>
            <span><i class="glyphicon glyphicon-pencil pull-right" data-toggle="tooltip" data-placement="top" title="Edit"></i></span>
          <% end %>
          <%= link_to daycare_teacher_path(@daycare, teacher), method: 'delete', data: { confirm: "Are you sure you want do delete #{teacher.name}?" }, id: "teacher-delete-#{teacher.id}", remote:true do %>
            <span><i class="glyphicon glyphicon-trash pull-right" data-toggle="tooltip" data-placement="top" title="Delete"></i></span>
          <% end %>
          <a><i class="glyphicon glyphicon-move pull-right" data-toggle="tooltip" data-placement="top" title="Drag panel title to rearrange sections"></i></a>
        </div>
        <div class="panel-body">
          <div class="media">
            <div class="media-left media-top" id="teacher-image<%= teacher.id %>">
             <%= image_tag teacher.picture.url(:thumb) %>
            </div>
            <div class="media-body">
              <h4 id="header-name-teacher-<%= teacher.id %>"><%= teacher.name %></h4>
              <div id="teacher-title-<%= teacher.id %>">
                <%= teacher.title %>
              </div>
              <div id="teacher-about-<%= teacher.id %>">
                <%= simple_format h teacher.about %>
              </div>
            </div>
          </div>
        </div>
      </li>
      <!-- <div id="edit-teacher-<%= teacher.id %>" class="daycare-edit-form-slide">
      </div> -->
    <% end %>
  </ul>
  <hr>
  <div id="teacher-edit-modal" class="modal fade"></div>
<% end %>
