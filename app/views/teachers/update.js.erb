$('#teacher-edit-modal').modal("hide");

$('#panel-name-teacher-<%= @teacher.id %>').text('<%= @teacher.name %>')
$('#header-name-teacher-<%= @teacher.id %>').text('<%= @teacher.name %>')
$("#teacher-image<%= @teacher.id %>").html("<%= j image_tag @teacher.picture.url(:thumb) %>");
$('#teacher-about-<%= @teacher.id %>').html('<%= j simple_format h @teacher.about %>')

$('#teacherList').sortable({
    axis: 'y',
    panel: '.panel-heading',
    update: function() {
      $.post($(this).data('update-url'), $(this).sortable('serialize'))
    }
  }
);
