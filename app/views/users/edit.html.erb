<div class="col-xs-10 col-xs-offset-1">
  <ul class="list-group">
    <li class="list-group-item">
      <div class="media">
        <div class="media-left media-top">
          <div id="daycare-name-plus">
            <%= link_to new_user_daycare_path(current_user, @daycare), id: 'add-daycare-name', remote: true do %>
              <span ><i class="glyphicon glyphicon-plus"></i></span>
            <% end %>
          </div>
          <div id="daycare-name-minus" style="display:none">
