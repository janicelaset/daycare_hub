<div class="col-xs-10 col-xs-offset-1">
  <ul class="list-group">
    <li class="list-group-item">
      <div class="media">
        <div class="media-left media-top">
          <div id="daycare-name-plus">
            <%= link_to edit_user_daycare_path(current_user, @daycare), id: 'daycare-edit-name', remote: true do %>
              <span ><i class="glyphicon glyphicon-plus"></i></span>
            <% end %>
          </div>
          <div id="daycare-name-minus" style="display:none">
            <%= link_to user_daycare_path(current_user, @daycare), remote: true do %>
              <span ><i class="glyphicon glyphicon-minus"></i></span>
            <% end %>
          </div>
        </div>
        <div class="media-body">
          <h4 class="media-heading">Daycare</h4>
          <div id="daycare-name-form" style="display:none;"></div>
          <div id="daycare-display-name">
            <% if current_user.daycare %>
              <%= render 'daycares/name' %>
            <% end %>
          </div>
        </div>
      </div>
